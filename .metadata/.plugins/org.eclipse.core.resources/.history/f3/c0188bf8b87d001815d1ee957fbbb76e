package com.bootcamp.exercise;

import java.util.Arrays;

public class Exercise {

	public static void main(String[] args) {
		int [] arr1 = {1,1,2,2,1};
		int [] arr2 = {1,1,2,2,2,1};
		int [] arr3 = {1,1,1,2,2,2,1};
		System.out.println(noTriples(arr1));
		System.out.println(noTriples(arr2));
		System.out.println(noTriples(arr3));
	
	}
	
	public static boolean noTriples(int [] arr) {
		boolean result = true;
		int count = 0;
		for(int i = 0; i < arr.length -2 ; i++) {
			
			for(int j = i + 1 ; j < i + 3 ; j++) {
				
				if(arr [i] == arr [j]) {
					count++;	
				}
			}
			
			if (count == 2) {
				result = false;
				break;
			}
			
			count = 0;
			
		}
			
		return result;
	}
	
	/*public static int redTicket(int a, int b, int c) {
		if( a == 2 && b == 2 && c == 2) {
			
		}
		else if(a != b && a != c ){
			
		}
		return ;
	}*/
	public int stringE(String str) {
		
		int count = 0;
		for(int i = 0 ; i < str.length() ; i++) {
			if(str.charAt(i) == 'e') {
				count++;
			}
		}
		return count;
	}
}
